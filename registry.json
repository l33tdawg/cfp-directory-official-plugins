{
  "schemaVersion": "1.1",
  "security": {
    "requireIntegrityCheck": true,
    "hashAlgorithm": "sha256",
    "note": "Hosts MUST verify sha256 checksums before installing plugins"
  },
  "plugins": [
    {
      "name": "ai-paper-reviewer",
      "displayName": "AI Paper Reviewer",
      "version": "1.27.0",
      "apiVersion": "1.0",
      "description": "Intelligent submission analysis with cost tracking, budget management, speaker context, criteria-based scoring, and Google Search grounding for fact-checking",
      "author": "CFP Directory",
      "homepage": "https://github.com/l33tdawg/cfp-directory-official-plugins/tree/main/plugins/ai-paper-reviewer",
      "permissions": [
        "submissions:read",
        "reviews:write",
        "reviews:read",
        "events:read",
        "users:manage"
      ],
      "hooks": [
        "submission.created",
        "submission.updated"
      ],
      "sidebarItems": [
        {
          "title": "AI Reviews",
          "icon": "Bot",
          "items": [
            { "key": "dashboard", "label": "Dashboard", "path": "/dashboard", "icon": "LayoutDashboard" },
            { "key": "history", "label": "Review History", "path": "/history", "icon": "History" },
            { "key": "personas", "label": "Reviewer Personas", "path": "/personas", "icon": "Sparkles" }
          ]
        }
      ],
      "configSchema": {
        "type": "object",
        "properties": {
          "aiProvider": {
            "type": "string",
            "title": "AI Provider",
            "enum": ["gemini", "openai", "anthropic"],
            "default": "gemini"
          },
          "apiKey": {
            "type": "string",
            "title": "API Key",
            "format": "password"
          },
          "model": {
            "type": "string",
            "title": "Model",
            "default": "gemini-2.0-flash"
          },
          "autoReview": {
            "type": "boolean",
            "title": "Auto-Review New Submissions",
            "default": true
          },
          "strictnessLevel": {
            "type": "string",
            "title": "Review Strictness",
            "enum": ["lenient", "moderate", "strict"],
            "default": "moderate"
          },
          "budgetLimit": {
            "type": "number",
            "title": "Monthly Budget Limit (USD)",
            "default": 0,
            "minimum": 0
          }
        },
        "required": ["apiKey"]
      },
      "downloadUrl": "https://github.com/l33tdawg/cfp-directory-official-plugins/releases/download/v1.27.0/ai-paper-reviewer.zip",
      "sha256": "5f1b5ee514fc38b0db1308fc2541c413b127e6df96541c48700dfe0c48e882ba"
    },
    {
      "name": "example-webhook",
      "displayName": "Example: Webhook Notifications",
      "version": "1.1.0",
      "apiVersion": "1.0",
      "description": "A starter template for plugin developers. Demonstrates hooks, configuration schemas, HMAC signatures, and background job retries. Use this as a base for building your own plugins.",
      "author": "CFP Directory",
      "homepage": "https://github.com/l33tdawg/cfp-directory-official-plugins/tree/main/plugins/example-webhook",
      "permissions": [
        "submissions:read"
      ],
      "hooks": [
        "submission.created",
        "submission.statusChanged",
        "review.submitted"
      ],
      "downloadUrl": "https://github.com/l33tdawg/cfp-directory-official-plugins/releases/download/example-webhook-v1.1.0/example-webhook.zip",
      "sha256": "5ee2cef95b9fa1078c5ba138e80395e77efd1f6e903da3cb0dc3e71dd4de9f84"
    }
  ]
}
